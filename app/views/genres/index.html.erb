<h1>All Genres</h1>
<%= link_to 'New Genre', new_genre_path, class: "btn btn-secondary" %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to 'Show', genre, class: "btn btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_genre_path(genre), class: "btn btn-secondary" %></td>
        <td><%= link_to '', genre, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-close" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h1>Books Updated in the Last 3 Days</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Publisher</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td><%= book.publisher %></td>
        <td><%= link_to 'Show', book, class: "btn btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-secondary" %></td>
        <td><%= link_to '', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-close" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @books%> 
<br/>

<%= link_to 'Back', books_path, class: "btn btn-secondary" %>